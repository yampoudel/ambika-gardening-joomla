				<field type="spacer" label="SIGPLUS_CATEGORY_THUMBNAIL" />
				<field name="thumb_width" type="text" default="60" label="SIGPLUS_THUMB_WIDTH" description="SIGPLUS_THUMB_WIDTH_DESCRIPTION" />
